<head>
  <link rel="stylesheet" href="/css/productCart.css">
  <link rel="stylesheet" href="/css/categories.css">

</head>

<%- include('../sections/menu.ejs') %>

<div>
    <h2><%= title%></h2>
  </div>

  <% categories.forEach(function(ca){ %>
    <a href="/cat/<%= ca.CategorySlug%>">
<img class="categories_img" src="<%=ca.Image%>">
    </a>
<% }); %>


<div class="card_body">
  <% products.forEach(function(pr){ %>
  <div class="card">
    <a href="/cat/<%= pr.CategorySlug%>/<%=pr.ProductSlug %>">
    <div class="imgBox">
      <img src="<%= pr.Image %>" alt="" />
    </div>
    <div class="details">
      <div class="textContent">
        <h4>
          <%=pr.ProductName.replace(/<\/?[^>]+(>|$)/g,
          "").trim().substr(0,10)+'...'%>
        </h4>
        <div class="price"><%= pr.ProductPrice %>đ</div>
      </div>
      <form
      action="/cart/<%= pr.ProductID %>/add"
      method="post"
      id="add_product"
    >
      <button type="submit">Thêm vào giỏ hàng</button>
    </form>
    </div>


    <div class="description">
      <div class="icon"><i class="bx bx-detail nav__icon"></i></div>
      <div class="contents">
        <h2>Buy Detail</h2>
        <p><%= pr.Description %></p>
      </div>
    </div>
  </div>
  <% }); %>
  <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#configurator" data-width="1200" data-numposts="10"></div>
</div>
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v12.0" nonce="miKs2v8n"></script>
